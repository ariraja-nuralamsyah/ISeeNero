<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_informasi_satu">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ISeeNero"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.ISeeNero.PopupOverlay" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="10pt"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:id="@+id/scrollViewInformasi1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-67dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/placeholderInformasi1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewInformasi1">

            <TextView
                android:id="@+id/tvJudulInformasi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/nunito"
                android:text="Apa saja yang harus dipersiapkan sebelum terjadi banjir?"
                android:textAlignment="center"
                android:textColor="@color/biru_tema"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/nomor1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/nomor1"
                app:layout_constraintStart_toStartOf="@id/placeholderInformasi1"
                app:layout_constraintTop_toBottomOf="@id/tvJudulInformasi1" />

            <TextView
                android:id="@+id/tvInformasi1Nomor1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/nunito"
                android:text="Bersiaplah untuk evakuasi ke dataran yang lebih tinggi sesegera mungkin dan bawa perlengkapan darurat Anda."
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="@id/placeholderInformasi1"
                app:layout_constraintLeft_toRightOf="@id/nomor1"
                app:layout_constraintTop_toBottomOf="@id/tvJudulInformasi1" />

            <ImageView
                android:id="@+id/nomor2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/nomor2"
                app:layout_constraintStart_toStartOf="@id/placeholderInformasi1"
                app:layout_constraintTop_toBottomOf="@id/tvInformasi1Nomor1" />

            <TextView
                android:id="@+id/tvInformasi1Nomor2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/nunito"
                android:text="Pantau siaran radio atau stasiun TV setempat untuk mendapatkan laporan perkembangan dan peringatan banjir."
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="@id/placeholderInformasi1"
                app:layout_constraintLeft_toRightOf="@id/nomor2"
                app:layout_constraintTop_toBottomOf="@id/tvInformasi1Nomor1" />

            <ImageView
                android:id="@+id/nomor3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/nomor3"
                app:layout_constraintStart_toStartOf="@id/placeholderInformasi1"
                app:layout_constraintTop_toBottomOf="@id/tvInformasi1Nomor2" />

            <TextView
                android:id="@+id/tvInformasi1Nomor3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/nunito"
                android:text="Hubungi dinas tata kota daerah setempat, untuk mengetahui kerawanan banjir daerah tersebut."
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="@id/placeholderInformasi1"
                app:layout_constraintLeft_toRightOf="@id/nomor3"
                app:layout_constraintTop_toBottomOf="@id/tvInformasi1Nomor2" />

            <ImageView
                android:id="@+id/nomor4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/nomor4"
                app:layout_constraintStart_toStartOf="@id/placeholderInformasi1"
                app:layout_constraintTop_toBottomOf="@id/tvInformasi1Nomor3" />

            <TextView
                android:id="@+id/tvInformasi1Nomor4"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/nunito"
                android:text="Matikan listrik dan saluran air."
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="@id/placeholderInformasi1"
                app:layout_constraintLeft_toRightOf="@id/nomor4"
                app:layout_constraintTop_toBottomOf="@id/tvInformasi1Nomor3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Sumber: Palang Merah Indonesia"
                android:layout_marginTop="100dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tvInformasi1Nomor4"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>