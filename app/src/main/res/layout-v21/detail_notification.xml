<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tDetailNotifikasi"
        android:layout_width="257dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="137dp"
        android:text="Detail Notifikasi"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/ttingkatWaspada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,NotSibling" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="450dp"

        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/tDetailNotifikasi"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/tingkatWaspada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="132dp"
            android:gravity="left"
            android:text="Bahaya"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ttingkatWaspada"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ketinggian_air"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="450 cm"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/tketinggian_air"
            app:layout_constraintTop_toBottomOf="@+id/tingkatWaspada" />

        <TextView
            android:id="@+id/ph_air"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="7,8"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/tph_air"
            app:layout_constraintTop_toBottomOf="@+id/ketinggian_air" />

        <TextView
            android:id="@+id/kecepatan_air"
            android:layout_width="75dp"
            android:layout_height="26dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="50 l/h"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/tkecepatan_air"
            app:layout_constraintTop_toBottomOf="@+id/ph_air" />

        <TextView
            android:id="@+id/tketinggian_air"
            android:layout_width="165dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Ketinggian                : "
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ttingkatWaspada" />

        <TextView
            android:id="@+id/tph_air"
            android:layout_width="165dp"
            android:layout_height="22dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="pH Air                        : "
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tketinggian_air" />

        <TextView
            android:id="@+id/twaktu"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:gravity="left"
            android:text="09/07/2021"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tnamaSungai" />

        <TextView
            android:id="@+id/ttingkatWaspada"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="Tingkat Waspada    : "
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twaktu" />

        <TextView
            android:id="@+id/tnamaSungai"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="Sungai Citarum"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tkecepatan_air"
            android:layout_width="165dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Kecepatan Air          : "
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tph_air" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="121dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        tools:ignore="VectorDrawableCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>